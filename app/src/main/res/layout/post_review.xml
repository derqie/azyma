<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:paddingTop="10dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Review User"
                        android:textSize="@dimen/txtBigger"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/oTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_margin="12dp"
                android:text="@string/null.text"
                android:textColor="?attr/textOutlineColor"
                android:textSize="@dimen/txtBig" />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            card_view:cardBackgroundColor="?attr/backgroundColor"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Comment"
                        android:textSize="@dimen/txtBig"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHeight_default="wrap"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_default="wrap" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="("
                            android:textSize="@dimen/txtBig" />

                    <TextView
                        android:id="@+id/oReview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:text="@string/null.text"
                        android:textColor="?attr/textOutlineColor"
                        android:textSize="@dimen/txtBigger" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text=")"
                            android:textSize="@dimen/txtBig" />

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/outline"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/gComment"
                            android:layout_width="match_parent"
                            android:layout_height="134dp"
                            android:background="@null"
                            android:gravity="top"
                            android:imeOptions="actionNext"
                            android:inputType="text|textMultiLine"
                            android:lines="1"
                            android:maxLength="256"
                            android:maxLines="1"
                            android:padding="4dp"
                            android:textSize="@dimen/txtBig" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioGroup
                            android:id="@+id/cReviews"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <RadioButton
                                android:id="@+id/radio0"
                                android:layout_width="wrap_content"
                                android:layout_height="22dp"
                                android:background="@drawable/radio_round_selector"
                                android:button="@android:color/transparent"
                                android:checked="true"
                                android:gravity="center"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:text="5.0"
                                android:textColor="@color/radio_text_selector" />

                            <RadioButton
                                android:id="@+id/radio1"
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:layout_marginTop="6dp"
                                android:background="@drawable/radio_round_selector"
                                android:button="@android:color/transparent"
                                android:gravity="center"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:text="4.0"
                                android:textColor="@color/radio_text_selector" />

                            <RadioButton
                                android:id="@+id/radio2"
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:layout_marginTop="6dp"
                                android:background="@drawable/radio_round_selector"
                                android:button="@android:color/transparent"
                                android:gravity="center"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:text="3.0"
                                android:textColor="@color/radio_text_selector" />

                            <RadioButton
                                android:id="@+id/radio3"
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:layout_marginTop="6dp"
                                android:background="@drawable/radio_round_selector"
                                android:button="@android:color/transparent"
                                android:gravity="center"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:text="2.0"
                                android:textColor="@color/radio_text_selector" />

                            <RadioButton
                                android:id="@+id/radio4"
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:layout_marginTop="6dp"
                                android:background="@drawable/radio_round_selector"
                                android:button="@android:color/transparent"
                                android:gravity="center"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:text="1.0"
                                android:textColor="@color/radio_text_selector" />

                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bDismiss"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_margin="3sp"
                        android:layout_weight="2"
                        android:background="@drawable/button_ca"
                        android:text="@string/dismiss"
                        android:textColor="?attr/backgroundColor"
                        android:textSize="@dimen/txtSmall" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/bSync"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_margin="3sp"
                        android:layout_weight="1"
                        android:text="Review"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txtSmall" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>
