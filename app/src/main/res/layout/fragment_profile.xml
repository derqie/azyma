<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background"
    tools:context=".ui.profile.Profile">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="284dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/background"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:orientation="horizontal"
                app:layout_collapseMode="parallax">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/legend"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/legend"
                        app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/footer" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="24dp"
                        android:paddingTop="36dp"
                        android:paddingRight="24dp">

                        <RelativeLayout
                            android:layout_width="72dp"
                            android:layout_height="72dp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/gImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="4dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginEnd="4dp"
                                android:layout_marginBottom="4dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_user" />

                            <RelativeLayout
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/sUpdated"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/secondary"/>

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/nUpdated"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/pending" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/sSet"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:padding="4dp"
                                    android:src="@drawable/ic_set"
                                    android:layout_centerInParent="true"/>
                            </RelativeLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Welcome Back,"
                                android:textSize="@dimen/txtBigger"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/gUser"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Welcome Back,"
                                android:textSize="@dimen/txtMedium"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="3dp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/sRank"
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:padding="2dp"
                                android:src="@drawable/ic_set" />

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="28dp"
                                android:layout_margin="4dp" />

                            <TextView
                                android:id="@+id/tRank"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="New Comer"
                                android:textSize="@dimen/txtMedium"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="28dp"
                                android:layout_margin="4dp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/bDismiss"
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:background="@drawable/button_da"
                                android:text="Redeem"
                                android:textColor="?attr/backgroundColor"
                                android:textSize="@dimen/txtTiny" />

                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:orientation="horizontal"
                            android:paddingLeft="24dp"
                            android:paddingRight="24dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="7dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    card_view:cardBackgroundColor="?attr/backgroundColor"
                                    card_view:cardCornerRadius="12dp"
                                    card_view:cardElevation="5dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:padding="12dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="vertical">


                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Trending"
                                                android:textSize="@dimen/txtBig"
                                                android:textStyle="bold" />

                                        </LinearLayout>

                                        <ImageView
                                            android:layout_width="48dp"
                                            android:layout_height="28dp"
                                            android:layout_weight="1"
                                            android:src="@drawable/ic_star" />

                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/tCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="12dp"
                                    android:background="@drawable/radio_round_selected"
                                    android:elevation="6dp"
                                    android:paddingLeft="12dp"
                                    android:paddingRight="12dp"
                                    android:text="--"
                                    android:textColor="?attr/backgroundColor"
                                    android:textSize="@dimen/txtSmall"
                                    android:textStyle="bold" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="7dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    card_view:cardBackgroundColor="?attr/backgroundColor"
                                    card_view:cardCornerRadius="12dp"
                                    card_view:cardElevation="5dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:padding="12dp">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="3"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Requested"
                                                android:textSize="@dimen/txtBig"
                                                android:textStyle="bold" />

                                        </LinearLayout>

                                        <ImageView
                                            android:layout_width="0dp"
                                            android:layout_height="28dp"
                                            android:layout_weight="1"
                                            android:src="@drawable/ic_validation" />

                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/sCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="12dp"
                                    android:background="@drawable/radio_round_selected"
                                    android:elevation="6dp"
                                    android:paddingLeft="12dp"
                                    android:paddingRight="12dp"
                                    android:text="--"
                                    android:textColor="?attr/backgroundColor"
                                    android:textSize="@dimen/txtSmall"
                                    android:textStyle="bold" />

                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>


                </RelativeLayout>
            </LinearLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/myScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/background"
        android:clipToPadding="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text="My Offers"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View More"
                    android:textColor="?attr/colorSecondaryVariant"
                    android:textSize="@dimen/txtSmall" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/oList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/oProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

                <include
                    android:id="@+id/fError"
                    layout="@layout/error"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="68dp"
                android:background="?attr/textOutlineColor" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
