<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="254dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="horizontal"
                card_view:cardBackgroundColor="?attr/backgroundColor"
                card_view:cardCornerRadius="18dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="false">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/mList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/cMain"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        android:src="@drawable/ic_azyma"
                        android:visibility="gone" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/footer" />

                    <RelativeLayout
                        android:id="@+id/rMain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="0dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/cCategory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/primary"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:paddingBottom="2dp"
                            android:text="Category"
                            android:textColor="?attr/backgroundColor"
                            android:textSize="@dimen/txtSmall"
                            android:textStyle="bold" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:orientation="vertical"
                            android:padding="6dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/uEmail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/txtMedium" />

                                <TextView
                                    android:id="@+id/uPhone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/txtSmall"
                                    android:textStyle="bold" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="6dp">

                                <TextView
                                    android:id="@+id/oSerial"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/null.text"
                                    android:textColor="?attr/textOutlineColor"
                                    android:textSize="@dimen/txtSmall"
                                    android:visibility="gone" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/ic_quotes" />

                                    <TextView
                                        android:id="@+id/oName"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/null.text"
                                        android:textSize="@dimen/txtMedium"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/oDescription"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:autoLink="web"
                                    android:ellipsize="end"
                                    android:maxLength="144"
                                    android:maxLines="4"
                                    android:padding="4dp"
                                    android:text="@string/null.text"
                                    android:textColor="?attr/textOutlineColor"
                                    android:textSize="@dimen/txtMedium"
                                    android:visibility="gone" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/uName"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/null.text"
                                        android:textColor="?attr/colorOnSecondary"
                                        android:textSize="@dimen/txtBig"
                                        android:textStyle="bold" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/oCurrency"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/radio_flat_selected"
                                    android:paddingLeft="12dp"
                                    android:paddingRight="12dp"
                                    android:text="@string/dollar"
                                    android:textAllCaps="true"
                                    android:textColor="?attr/backgroundColor"
                                    android:textSize="@dimen/txtSmall"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/oCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/radio_flat_selector"
                                    android:paddingLeft="12dp"
                                    android:paddingRight="12dp"
                                    android:text="4,999"
                                    android:textColor="?attr/colorSecondary"
                                    android:textSize="@dimen/txtSmall"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="3dp">

                                <TextView
                                    android:id="@+id/created"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/null.text"
                                    android:textColor="?attr/colorOnSecondary"
                                    android:textSize="@dimen/txtSmall" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="3dp"
                                    android:text="Ago"
                                    android:textColor="?attr/colorOnSecondary"
                                    android:textSize="@dimen/txtSmall" />

                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="6dp">

                <RelativeLayout
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_margin="4dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/cIcon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_azyma" />

                    <LinearLayout
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/secondary"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="3dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/cVerify"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_azyma" />
                    </LinearLayout>
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/oViewed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12 Peep(s)"
                            android:textColor="?attr/textOutlineColor"
                            android:textSize="@dimen/txtTiny" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iViews"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:src="@drawable/eye" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/oLiked"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4 Like(s)"
                            android:textColor="?attr/textOutlineColor"
                            android:textSize="@dimen/txtTiny" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/oLike"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:src="@drawable/hearted" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/rShare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/oShared"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 Share(s)"
                            android:textColor="?attr/textOutlineColor"
                            android:textSize="@dimen/txtTiny" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/oShare"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_margin="4dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:src="@drawable/share" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="?attr/textOutlineColor" />

                    <LinearLayout
                        android:id="@+id/rSettings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Settings"
                            android:textColor="?attr/textOutlineColor"
                            android:textSize="@dimen/txtTiny" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/oSettings"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_margin="4dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:src="@drawable/settings" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/oReviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:background="@drawable/secondary"
        android:elevation="6dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="4"
        android:textColor="?attr/backgroundColor"
        android:textSize="@dimen/txtMedium"
        android:textStyle="bold"
        android:visibility="gone" />

</RelativeLayout>